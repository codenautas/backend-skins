[my-skin=confort-bis]

  .pika-single 
    color #2f5097
    background-color transparent
    background-opacity 0.5
    border 1px #748dbc
    border-radius 5px
    padding 0px
    
  .pika-label
    display inline
    position relative
    margin 0
    padding 0px
    line-height 20px
    font-weight bold
    background-color transparent

  .pika-table
    padding 10px
    margin-top 5px
  
  .pika-table th
    padding 2px
    color white
    background-color #5e5785
    border-bottom 3px solid #a1b4d9
    
  .pika-table td
    padding 0px
    background-color transparent
    border-radius 5px
  
 
  .pika-table button
    background #85aebf
    background -webkit-linear-gradient(#c7c7de, #a1c8ce)
    background -o-linear-gradient(#c7c7de, #a1c8ce)
    background -moz-linear-gradient(#c7c7de, #a1c8ce)
    background linear-gradient(#c7c7de, #a1c8ce)
    width 30px
    height 30px
    padding 10px
    border 0px
    font-size 110%
    font-weight 700
    color #2f5097
    
  .pika-table button:hover
    background-color transparent
    border 0px

  .pika-title
    font-size 130%
  
  .pika-select
    background-color #e6e6f0
    display inline-block
    padding 2px
    border-bottom 2px solid #9393ab
    border-top    2px solid #9393ab
    border-left   2px solid #9393ab
    border-right  2px solid #9393ab
    color #135475
  
  .pika-prev
    display block
    cursor pointer
    position relative
    outline none
    border 0
    padding 0
    width 20px
    height 30px
    text-indent 20px
    white-space nowrap
    overflow hidden
    background-image url('../img/pikaprev.png')
    background-color transparent
    background-position center
    background-repeat no-repeat
    background-size 100%
    float left
    
  .pika-next
    display block
    cursor pointer
    position relative
    outline none
    border 0
    padding 0
    width 20px
    height 30px
    text-indent 20px
    white-space nowrap
    overflow hidden
    background-image url('../img/pikanext.png')
    background-color transparent
    background-position center
    background-repeat no-repeat
    background-size 100%
    float right