    background -webkit-linear-gradient(#85b1c1, #35bfd4)
    background -o-linear-gradient(#85b1c1, #35bfd4)
    background -moz-linear-gradient(#85b1c1, #35bfd4)
    background linear-gradient(#85b1c1, #35bfd4)
