    border-top 0px solid #72aecc
    line-height 40px
    border-collapse collapse
    cursor pointer
    letter-spacing 1px
    font-size 70%
    
  [inherited-pk-column=yes]
    display none
    background-color #a5a5c6
 
  [show-inherited-keys=yes] [inherited-pk-column=yes]
    display table-cell
