[my-skin=confort-bis]

  gridColor = rgba(255,255,255,1)
  
  .my-grid
    background gridColor
  
  .my-grid caption
    background gridColor
  
  border-table()
    border-bottom 1px solid #d8d8f2
    border-top    0px solid #d8d8f2
    border-left   1px solid #d8d8f2
    border-right  1px solid #d8d8f2
    margin 0px
    border-spacing 0px
    border-collapse collapse
    
  .my-grid
    font-family Helvetica
    border-table()
  
  nowrap()
    white-space pre
    overflow hidden
    max-width 300px
    
  .my-grid td
    font-size 90%
    color #5d586c
    border-table()
    nowrap()
    padding 7px
  
  .my-grid tr:nth-child(2n) 
    background-color #f4f5f8
  
  .my-grid tr td x
    background-color #c7c7de
    border-bottom   2px solid #666
    border-top      2px solid #3F517F
  
  .my-grid th
    border-table()
    color #5e5785
  
  .my-grid tbody th
    nowrap()
    background-color #eeeef4
  
  .my-grid caption
    font-family Helvetica
    font-weight bold
    font-size 75%
    letter-spacing 1px
    border-table()
    background #535387
    background -webkit-linear-gradient(#535387, #7e6ea1)
    background -o-linear-gradient(#535387, #7e6ea1)
    background -moz-linear-gradient(#535387, #7e6ea1)
    background linear-gradient(#535387, #7e6ea1)
    padding 15px
    color #FFF
  
  .my-grid tfoot
    background-color #c7c7de
    color #FFF
    font-size 90%
    padding 5px
  
  .my-grid thead th
    font-family  Helvetica
    font-size 70%
    background-color #c7c7de
    white-space nowrap
    color #685e84
    z-index 1
    
  .th-name
    padding 10px
    font-size 70%
    overflow hidden
      
  .my-grid thead th.th-detail
    font-size 60%
    white-space wrap
  
  .grid-th grid-th-actions
     background-color #eeeef4
    
  [io-status=pending]
    background-color #CDE
    
  [io-status=updating]
    background-color #ABC
    
  [io-status=error]
    background-color #FF6666
  
  [io-status=temporal-ok]
    background-color #ADA
  
  [io-status=write-read-conflict]
    background-color #DAD
  
  [io-status=background-change]
    background-color #ADD
  
  .table-button
    margin 0px
    border 0px
    padding 0px
    background-color transparent
    z-index -1
   
  .table-button img
    height 20px
    padding 3px
    -webkit-transform scale(1.0)
    transform scale(1.0)
    -webkit-transition .3s ease-in-out
    transition .3s ease-in-out
  
  .table-button img:hover
    -webkit-transform scale(1.2)
    transform scale(1.2)
    cursor pointer
  
  .table-button img:active
    -webkit-transform scale(1.2)
    transform scale(1.2)
    cursor pointer
    
  .autoFilter
    background-color #c7c7de
    width 30px
    
    
  [has-filter='1'] 
    [when-filter=no] 
      display none
    [when-filter=yes] 
      display inherit
  
  [has-filter='0']
    [when-filter=yes] 
      display none
    [when-filter=no] 
      display inherit
  
  .filter-span
    display inline-block
    background-color #FFF
    padding 2px
    border-top 2px solid #9393ab
    border-left 2px solid #9393ab
    border-bottom 2px solid #9393ab
    border-right 2px solid #9393ab
    min-height 20px
    min-width 20px
    outline none !important
  
  .filter-span:focus
    display inline-block
    background-color #FFF
    padding 2px
    border-top 2px solid #66b8c6
    border-left 2px solid #66b8c6
    border-bottom 2px solid #66b8c6
    border-right 2px solid #66b8c6
    min-height 20px
    min-width 20px
    outline none !important
    
  .filter-line
    th
      vertical-align middle
      
  .filter-line
    td
      padding 5px
      vertical-align bottom
  
  .grid-dummy-cell-ini
    height: 1px;
    width: 1px;
    transition: height 0.6s ease;
  
  .grid-dummy-cell-del
    transition: height 0.6s ease;
  
  @keyframes animateheight {
    from {transform: scaleY(0.1)}
    to {transform: scaleY(1)}
  }
  
  .empty-rigth-column{
    background-color inherit !important
    border inherit !important
    padding 0 !important
  }
  
  .my-grid td.autoFilter{
    nowrap()
    white-space nowrap
  }
  
  td.autoFilter button{
    display inline-block
  }
  
  .number_miles + .number_miles{
    margin-left 2px
  }
  
  .number_decimals
    font-size 90%
  
  .date_year
    font-size 90%
  
  .img-lupa
    height 25px
    -webkit-transform scale(1.0)
    transform scale(1.0)
    -webkit-transition .2s ease-in-out
    transition .2s ease-in-out
    
  .img-lupa:hover
    height 35px
    cursor pointer
    -webkit-transform scale(1.1)
    transform scale(1.1)
    -webkit-transition .2s ease-in-out
    transition .3s ease-in-out
    
    
  .foot-info
    color #FFF
    font-weight 600
    padding 7px
    background #8080a3
    background -webkit-linear-gradient(#8080a3, #9898c4)
    background -o-linear-gradient(#8080a3, #9898c4)
    background -moz-linear-gradient(#8080a3, #9898c4)
    background linear-gradient(#8080a3, #9898c4)
    border-right  2px solid #7573a5
    border-bottom 2px solid #7573a5
    border-left  2px solid #7573a5
    border-top 2px solid #7573a5
  
  .foot-info:hover
    color #FFF
    background #7372a1
    background -webkit-linear-gradient(#585789, #799dae)
    background -o-linear-gradient(#585789, #799dae)
    background -moz-linear-gradient(#585789, #799dae)
    background linear-gradient(#585789, #799dae)
    border-right  2px solid #646791
    border-bottom 2px solid #646791
    border-left  2px solid #646791
    border-top 2px solid #646791
    cursor pointer
    
  .foot-info:active
    color #FFF
    background-color #082158
    border-right  2px solid #2f5097
    border-bottom 2px solid #2f5097
    border-left  2px solid #122348
    border-top 2px solid #122348
    
  #button-filter
    color #FFF
    font-weight 600
    padding 7px
    background #8080a3
    background -webkit-linear-gradient(#8080a3, #9898c4)
    background -o-linear-gradient(#8080a3, #9898c4)
    background -moz-linear-gradient(#8080a3, #9898c4)
    background linear-gradient(#8080a3, #9898c4)
    border-right  2px solid #7573a5
    border-bottom 2px solid #7573a5
    border-left  2px solid #7573a5
    border-top 2px solid #7573a5
   
    
  #button-filter:hover
    color #FFF
    background #7372a1
    background -webkit-linear-gradient(#585789, #799dae)
    background -o-linear-gradient(#585789, #799dae)
    background -moz-linear-gradient(#585789, #799dae)
    background linear-gradient(#585789, #799dae)
    border-right  2px solid #646791
    border-bottom 2px solid #646791
    border-left  2px solid #646791
    border-top 2px solid #646791
    cursor pointer
    
  #button-filter:active
    color #FFF
    background-color #5b588c
    background -webkit-linear-gradient(#56558c, #50849c)
    background -o-linear-gradient(#56558c, #50849c)
    background -moz-linear-gradient(#56558c, #50849c)
    background linear-gradient(#56558c, #50849c)
    border-right  0px solid #5b588c
    border-bottom 0px solid #5b588c
    border-left  0px solid #5b588c
    border-top 0px solid #5b588c
    
  #main-top-bar
    background-color #5b588c
    background -webkit-linear-gradient(#56558c, #50849c)
    background -o-linear-gradient(#56558c, #50849c)
    background -moz-linear-gradient(#56558c, #50849c)
    background linear-gradient(#56558c, #50849c)
    vertical-align center
    margin 0px
    padding 5px
  
  #main-top-bar1
    background-color #548ca6
    
  .menu-item
    font-family Helvetica
    color #f4f5f8
    font-size 75%
    font-weight 700
    background-color transparent
    border-right  1px solid #6fa6c0
    border-bottom 0px solid #7799a0
    border-left  0px solid #7799a0
    border-top 0px solid #7799a0
    letter-spacing 1px
    padding 5px
  
  .menu-item:hover
    color #d0c1ef
  
  #right-menu
   color #25cec6
   font-family Helvetica
   font-weight 700
   font-size 75%
   
  #right-menu:hover
   cursor pointer
   color #d0c1ef
   
  #tables
    background-color #5b588c
    background -webkit-linear-gradient(#56558c, #50849c)
    background -o-linear-gradient(#56558c, #50849c)
    background -moz-linear-gradient(#56558c, #50849c)
    background linear-gradient(#56558c, #50849c)
    font-family Helvetica
    font-weight 600
    color #FFF
    border-right  1px solid #72aecc
    border-bottom 0px solid #72aecc
