[my-skin=confort-dark]

  .pika-single 
    color #2f5097
    background-color transparent
    background-opacity 0.5
    border 1px #748dbc
    border-radius 5px
    padding 0px
    
  .pika-label
    display inline
    position relative
    margin 0
    padding 0px
    line-height 20px
    font-weight bold
    background-color transparent

  .pika-table
    padding 10px
    margin-top 5px
  
  .pika-table th
    padding 2px
    color white
    background-color #60667c
    border-bottom 3px solid #73a9b3
    
  .pika-table td
    padding 0px
    background-color transparent
    border-radius 5px
  
 
  .pika-table button
    background #262e46
    background -webkit-linear-gradient(#262e46, #62687a)
    background -o-linear-gradient(#262e46, #62687a)
    background -moz-linear-gradient(#262e46, #62687a)
    background linear-gradient(#262e46, #62687a)
    width 35px
    height 35px
    padding 10px
    border 0px
    font-size 110%
    font-weight 700
    color #d7daf1
    
  .pika-table button:hover
    background #85aebf
    background -webkit-linear-gradient(#5e7880, #7ec4cf)
    background -o-linear-gradient(#5e7880, #7ec4cf)
    background -moz-linear-gradient(#5e7880, #7ec4cf)
    background linear-gradient(#5e7880, #7ec4cf)
    border 0px

  .pika-title
    font-size 130%
  
  .pika-select
    background-color #fff
    display inline-block
    padding 2px
    border-bottom 1px solid #0bdbc9
    border-top    1px solid #0bdbc9
    border-left   1px solid #0bdbc9
    border-right  1px solid #0bdbc9
    color #135475
  
  .pika-prev
    display block
    cursor pointer
    position relative
    outline none
    border 0
    padding 0
    width 15px
    height 20px
    text-indent 20px
    white-space nowrap
    overflow hidden
    background-image url('../img/pikaprev.png')
    background-color transparent
    background-position center
    background-repeat no-repeat
    background-size 100%
    float left
    
  .pika-next
    display block
    cursor pointer
    position relative
    outline none
    border 0
    padding 0
    width 15px
    height 20px
    text-indent 20px
    white-space nowrap
    overflow hidden
    background-image url('../img/pikanext.png')
    background-color transparent
    background-position center
    background-repeat no-repeat
    background-size 100%
    float right