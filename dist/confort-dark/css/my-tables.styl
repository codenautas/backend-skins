[my-skin=confort-dark]

  gridColor = rgba(63,67,82,1)
  
  .my-grid
    background gridColor
  
  .my-grid caption
    background gridColor
  
  border-table()
    border-bottom 1px solid #262934
    border-top    0px solid #262934
    border-left   1px solid #262934
    border-right  1px solid #262934
    margin 0px
    border-spacing 0px
    border-collapse collapse
    
  .my-grid
    font-family Helvetica
    border-table()
  
  nowrap()
    white-space pre
    overflow hidden
    max-width 300px
    
  .my-grid td
    font-size 90%
    color #d9dede
    border-table()
    nowrap()
    padding 7px
  
  .my-grid tr:nth-child(2n) 
    background-color #313646
  
  .my-grid tr td x
    background-color #60667c
    border-bottom   2px solid #666
    border-top      2px solid #3F517F
  
  .my-grid th
    border-table()
    color #b2e3eb
  
  .my-grid tbody th
    nowrap()
    background-color #262b38
  
  .my-grid caption
    font-family Helvetica
    font-weight bold
    font-size 75%
    letter-spacing 1px
    border-table()
    background #535387
    background -webkit-linear-gradient(#454149, #525b6e)
    background -o-linear-gradient(#454149, #525b6e)
    background -moz-linear-gradient(#454149, #525b6e)
    background linear-gradient(#454149, #525b6e)
    padding 15px
    color #aff7f1
  
  .my-grid tfoot
    background-color #60667c
    color #35353d
    font-size 90%
    padding 5px
  
  .my-grid thead th
    font-family  Helvetica
    font-size 70%
    background-color #60667c
    white-space nowrap
    color #c6e3eb
    z-index 1
    
  .th-name
    padding 10px
    font-size 70%
    overflow hidden
      
  .my-grid thead th.th-detail
    font-size 60%
    white-space wrap
  
  .grid-th grid-th-actions
     background-color #262b38
    
  [io-status=pending]
    background-color #8eacca
    
  [io-status=updating]
    background-color #879cb1
    
  [io-status=error]
    background-color #ad3e3e
  
  [io-status=temporal-ok]
    background-color #559e8c
  
  [io-status=write-read-conflict]
    background-color #DAD
  
  [io-status=background-change]
    background-color #ADD
  
  .table-button
    margin 0px
    border 0px
    padding 0px
    background-color transparent
    z-index -1
    
  .table-button img
    height 20px
    padding 3px
    -webkit-transform scale(1.0)
    transform scale(1.0)
    -webkit-transition .3s ease-in-out
    transition .3s ease-in-out
  
  .table-button img:hover
    -webkit-transform scale(1.2)
    transform scale(1.2)
    cursor pointer
  
  .table-button img:active
    -webkit-transform scale(1.2)
    transform scale(1.2)
    cursor pointer
    
  .autoFilter
    background-color #60667c
    width 30px
    
    
  [has-filter='1'] 
    [when-filter=no] 
      display none
    [when-filter=yes] 
      display inherit
  
  [has-filter='0']
    [when-filter=yes] 
      display none
    [when-filter=no] 
      display inherit
  
  .filter-span
    display inline-block
    color #505365
    background-color #79819c
    padding 2px
    border-top 1px solid #262934
    border-left 1px solid #262934
    border-bottom 1px solid #262934
    border-right 1px solid #262934
    min-height 20px
    min-width 20px
    outline none !important
  
  .filter-span:focus
    display inline-block
    background-color #FFF
    padding 2px
    border-top 1px solid #66b8c6
    border-left 1px solid #66b8c6
    border-bottom 1px solid #66b8c6
    border-right 1px solid #66b8c6
    min-height 20px
    min-width 20px
    outline none !important
    
  .filter-line
    th
      vertical-align middle
      
  .filter-line
    td
      padding 5px
      vertical-align bottom
  
  .grid-dummy-cell-ini
    height: 1px;
    width: 1px;
    transition: height 0.6s ease;
  
  .grid-dummy-cell-del
    transition: height 0.6s ease;
  
  @keyframes animateheight {
    from {transform: scaleY(0.1)}
    to {transform: scaleY(1)}
  }
  
  .empty-rigth-column{
    background-color inherit !important
    border inherit !important
    padding 0 !important
  }
  
  .my-grid td.autoFilter{
    nowrap()
    white-space nowrap
  }
  
  td.autoFilter button{
    display inline-block
  }
  
  .number_miles + .number_miles{
    margin-left 2px
  }
  
  .number_decimals
    font-size 90%
  
  .date_year
    font-size 90%
  
  .img-lupa
    height 25px
    -webkit-transform scale(1.0)
    transform scale(1.0)
    -webkit-transition .2s ease-in-out
    transition .2s ease-in-out
    
  .img-lupa:hover
    height 35px
    cursor pointer
    -webkit-transform scale(1.1)
    transform scale(1.1)
    -webkit-transition .2s ease-in-out
    transition .3s ease-in-out
    
    
  .foot-info
    color #484f69
    font-weight 600
    padding 7px
    background #8de9f5
    background -webkit-linear-gradient(#8de9f5, #5f7982)
    background -o-linear-gradient(#8de9f5, #5f7982)
    background -moz-linear-gradient(#8de9f5, #5f7982)
    background linear-gradient(#8de9f5, #5f7982)
    border-right  1px solid #535767
    border-bottom 1px solid #535767
    border-left  1px solid #535767
    border-top 1px solid #535767
  
  .foot-info:hover
    color #484f69
    background #8de9f5
    background -webkit-linear-gradient(#48656f, #6facb4)
    background -o-linear-gradient(#48656f, #6facb4)
    background -moz-linear-gradient(#48656f, #6facb4)
    background linear-gradient(#48656f, #6facb4)
    border-right  1px solid #535767
    border-bottom 1px solid #535767
    border-left  1px solid #535767
    border-top 1px solid #535767
    cursor pointer
    
  .foot-info:active
    color #FFF
    background-color #082158
    border-right  2px solid #2f5097
    border-bottom 2px solid #2f5097
    border-left  2px solid #122348
    border-top 2px solid #122348
    
  #button-filter
    color #FFF
    font-weight 600
    padding 7px
    background #8de9f5
    background -webkit-linear-gradient(#8de9f5, #5f7982)
    background -o-linear-gradient(#8de9f5, #5f7982)
    background -moz-linear-gradient(#8de9f5, #5f7982)
    background linear-gradient(#8de9f5, #5f7982)
    border-right  1px solid #535767
    border-bottom 1px solid #535767
    border-left  1px solid #535767
    border-top 1px solid #535767
    
  #button-filter:hover
    color #FFF
    background #8de9f5
    background -webkit-linear-gradient(#48656f, #6facb4)
    background -o-linear-gradient(#48656f, #6facb4)
    background -moz-linear-gradient(#48656f, #6facb4)
    background linear-gradient(#48656f, #6facb4)
    border-right  1px solid #535767
    border-bottom 1px solid #535767
    border-left  1px solid #535767
    border-top 1px solid #535767
    cursor pointer
    
  #button-filter:active
    color #FFF
    background-color #5b588c
    background -webkit-linear-gradient(#56558c, #50849c)
    background -o-linear-gradient(#56558c, #50849c)
    background -moz-linear-gradient(#56558c, #50849c)
    background linear-gradient(#56558c, #50849c)
    border-right  0px solid #5b588c
    border-bottom 0px solid #5b588c
    border-left  0px solid #5b588c
    border-top 0px solid #5b588c
    
  #main-top-bar
    background-color #0f3740
    background -webkit-linear-gradient(#0f3740, #204f59)
    background -o-linear-gradient(#0f3740, #204f59)
    background -moz-linear-gradient(#0f3740, #204f59)
    background linear-gradient(#0f3740, #204f59)
    vertical-align center
    margin 0px
    padding 5px
  
  #main-top-bar1
    background-color #265762
    
  .menu-item
    font-family Helvetica
    color #25e2e2
    font-size 75%
    font-weight 700
    background-color transparent
    border-right  1px solid #2f6e7d
    border-bottom 0px solid #7799a0
    border-left  0px solid #7799a0
    border-top 0px solid #7799a0
    letter-spacing 1px
    padding 5px
  
  .menu-item:hover
    color #e6e0f4
  
  #right-menu
   cursor pointer
   color #25ccce
   float right
   font-size 75%
   font-weight 700
    
  #tables
    background-color #184e5a
    background -webkit-linear-gradient(#184e5a, #2e6976)
    background -o-linear-gradient(#184e5a, #2e6976)
    background -moz-linear-gradient(#184e5a, #2e6976)
    background linear-gradient(#184e5a, #2e6976)
    font-family Helvetica
    font-weight 600
    color #FFF
    border-right  1px solid #7799a0
    border-bottom 0px solid #7799a0
    border-left  0px solid #7799a0
    border-top 0px solid #7799a0
    line-height 40px
    border-collapse collapse
    cursor pointer
    letter-spacing 1px
    font-size 70%
    
  [inherited-pk-column=yes]
    display none
    background-color #69a7a8
 
  [show-inherited-keys=yes] [inherited-pk-column=yes]
    display table-cell

  .sort-img
    width 16px