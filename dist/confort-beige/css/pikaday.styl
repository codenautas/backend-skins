[my-skin=confort-beige]

  .pika-single 
    color #2f5097
    background-color transparent
    background-opacity 0.5
    border 1px #f7b98b
    border-radius 5px
    padding 0px
    
  .pika-label
    display inline
    position relative
    margin 0
    padding 0px
    line-height 20px
    font-weight bold
    background-color transparent

  .pika-table
    padding 10px

    
  .pika-table th
    padding 2px
    color white
    background-color #1a2137
    border-bottom 3px solid #c9b1a0
    
  .pika-table td
    padding 0px
    background-color transparent
    border solid 1px #f7b98b
    border-collapse collapse

  .pika-table tbody
    background-color #ecddce
 
  .pika-table button
    background #262e46
    background -webkit-linear-gradient(#262e46, #62687a)
    background -o-linear-gradient(#262e46, #62687a)
    background -moz-linear-gradient(#262e46, #62687a)
    background linear-gradient(#262e46, #62687a)
    width 40px
    height 40px
    margin 0px
    border 0px
    font-size 110%
    font-weight 700
    color #f7c390
    
  .pika-table button:hover
    background #eac4a8
    background -webkit-linear-gradient(#eac4a8, #d4b39b)
    background -o-linear-gradient(#eac4a8, #d4b39b)
    background -moz-linear-gradient(#eac4a8, #d4b39b)
    background linear-gradient(#eac4a8, #d4b39b)
    border 0px

  .pika-title
    font-size 130%
  
  .pika-select
    background-color #fff
    display inline-block
    padding 2px
    border-bottom 1px solid #f7b98b
    border-top    1px solid #f7b98b
    border-left   1px solid #f7b98b
    border-right  1px solid #f7b98b
    color #135475
  
  .pika-prev
    display block
    cursor pointer
    position relative
    outline none
    border 0
    padding 0
    width 15px
    height 20px
    text-indent 20px
    white-space nowrap
    overflow hidden
    background-image url('../img/pikaprev.png')
    background-color transparent
    background-position center
    background-repeat no-repeat
    background-size 100%
    float left
    
  .pika-next
    display block
    cursor pointer
    position relative
    outline none
    border 0
    padding 0
    width 15px
    height 20px
    text-indent 20px
    white-space nowrap
    overflow hidden
    background-image url('../img/pikanext.png')
    background-color transparent
    background-position center
    background-repeat no-repeat
    background-size 100%
    float right