body {
    background: red !important;
}

/* Solo se aplica si el formulario de login está presente */
body:has(#chPassForm) {
  margin: 0;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  min-height: 100vh !important;
  background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%) !important;
  font-family: 'Inter', sans-serif !important;
}

/* Contenedor Principal (Transformando la tabla en una Card) */
#chPassForm {
  display: flex;
  justify-content: center;
  background: #ffffff !important;
  padding: 30px !important;
  border-radius: 16px !important;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5) !important;
  width: 100% !important;
  max-width: 380px !important;
  animation: fadeIn 0.5s ease-out;
  text-transform: uppercase;
}

.chpasstable {
  width: 100%;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.logintable { width: 100% !important; border-collapse: collapse !important; }

/* Título */
.formtitle {
  color: #1e293b !important;
  font-size: 22px !important;
  font-weight: 700 !important;
  text-align: center !important;
  margin: 0 0 24px 0 !important;
  letter-spacing: -0.5px;
}

/* Logo */
.logintableLogoImgRow img {
  display: block !important;
  margin: 0 auto 15px auto !important;
  max-height: 150px !important;
  width: auto !important;
}

/* Labels */
.formlabel label {
  display: block !important;
  color: #475569 !important;
  font-size: 12px !important;
  font-weight: 600 !important;
  text-transform: uppercase !important;
  margin-bottom: 6px !important;
  margin-top: 10px !important;
}

/* Inputs de Texto y Password */
.formtd input {
  width: 94% !important;
  padding: 12px 10px !important;
  border: 1px solid #e2e8f0 !important;
  border-radius: 8px !important;
  font-size: 15px !important;
  background-color: #e8f0fe !important;
  transition: all 0.2s ease !important;
  outline: none !important;
  color: #1e293b !important;
  text-transform: uppercase;
  font-size: x-small !important;
}

.formtd input:focus {
  border-color: #3b82f6 !important;
  background-color: #ffffff !important;
  box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.15) !important;
}

/* Botones acción */
tr>td.actions {
  display: flex !important;
  justify-content: space-between;
  margin-top: 14px;
}

.actions a, .actions input {
  width: 47%;
  border-radius: 5px;
  text-transform: uppercase;
  font-size: medium;
  text-decoration: none;
  font-size: 15px !important;
  font-weight: 600 !important;
}

/* Botón Cancelar */
td a {
  background-color: #ddd;
  color: #666;
  text-align: center;
  padding: 5px 2px;
}

/* Botón Submit */
input[type=submit] {
  background-color: #1976d2;
  color: #fff;
  border: none;
  padding: 5px;
}

input[type=submit]:hover {
  cursor: pointer;
  background-color: #1d4ed8 !important;
  transition: 0.2s;
}

.chpasstable tr, .chpasstable td .iconostd { 
  display: none !important; 
}

/* Ajuste de celdas de tabla para que fluyan como bloques */
.chpasstable tr:not(.iconostd), .chpasstable td:not(.iconostd):not(.actions) {
  display: block !important;
  width: 100% !important;
}

.iconoslog, .formImg
  display none

.error-message {
  margin-top: 10px;
  font-size: small;
}